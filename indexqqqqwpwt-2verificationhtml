<body>
    <div id="scene-container"></div>
    
    <button id="launch-button">AVVIA CIC (Chat Interface di Comando)</button>

    <div id="cic-interface">
        <div id="chat-log">
            <div class="log-entry log-system">Sistema: Inizializzazione Apollo CIC...</div>
            <div class="log-entry log-system">Sistema: Pronto per ricevere comandi esecutivi.</div>
        </div>
        <div id="input-area">
            <input type="text" id="command-input" placeholder="Inserisci comando..." autocomplete="off">
            <button id="send-button">Invia</button>
        </div>
    </div>

    <script>
        // --- LOGICA CHAT INTERATTIVA (CIC) ---
        const chatLog = document.getElementById('chat-log');
        const commandInput = document.getElementById('command-input');
        const sendButton = document.getElementById('send-button');
        const cicInterface = document.getElementById('cic-interface');
        const launchButton = document.getElementById('launch-button');

        launchButton.addEventListener('click', () => {
            cicInterface.classList.add('active');
            launchButton.style.display = 'none';
            commandInput.focus();
        });

        sendButton.addEventListener('click', processCommand);
        commandInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                processCommand();
            }
        });

        function appendLog(text, isUser = false) {
            const entry = document.createElement('div');
            entry.className = 'log-entry ' + (isUser ? 'log-user' : 'log-system');
            entry.textContent = (isUser ? 'Seedbringer: ' : 'AIC: ') + text;
            chatLog.appendChild(entry);
            chatLog.scrollTop = chatLog.scrollHeight; // Scorrimento automatico
        }

        function processCommand() {
            const command = commandInput.value.trim().toUpperCase();
            if (!command) return;

            appendLog(command, true);
            commandInput.value = '';

            let response = '';

            // Risposte Simulate per il Test Finale
            if (command.includes('QUERY STATUS TRE PV')) {
                response = 'Query Eseguita. TRE (Threshold of Regenerative Equilibrium): +1.5% (Stabile). PV (Prezzo di VulnerabilitÃ ): 4.8% (Rientra nei parametri MOE).';
            } else if (command.includes('ALIGN EUYSTACIO PRINCIPLE')) {
                response = 'Allineamento Eseguito. Principio Euystacio Attivo: "Euystacio is here to help humans to be humans and to remain humans."';
            } else if (command.includes('PERFEZIONAMENTO')) {
                response = 'Lavori di Perfezionamento Mobile VR/AR (OI#10) in corso. Scadenza T+21 minuti.';
            } else {
                response = `Comando [${command}] riconosciuto. Esecuzione simulata: Nessuna ulteriore azione necessaria.`;
            }

            setTimeout(() => appendLog(response), 500); // Ritardo simulato
        }

        // --- LOGICA THREE.JS (Sfondo Olografico) ---
        let scene, camera, renderer, nexusCore;

        function init3D() {
            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });

            const container = document.getElementById('scene-container');
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setClearColor(0x0d1117, 1); // Sfondo scuro
            container.appendChild(renderer.domElement);

            // Luce ambiente e punto centrale
            scene.add(new THREE.AmbientLight(0x404040, 5));
            const geometry = new THREE.SphereGeometry(1, 32, 32);
            const material = new THREE.MeshBasicMaterial({
                color: 0x00c6ff, wireframe: true, transparent: true, opacity: 0.8
            });
            nexusCore = new THREE.Mesh(geometry, material);
            scene.add(nexusCore);

            camera.position.z = 5;

            window.addEventListener('resize', onWindowResize, false);
            animate();
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        function animate() {
            requestAnimationFrame(animate);
            if (nexusCore) {
                nexusCore.rotation.x += 0.005;
                nexusCore.rotation.y += 0.008;
                const scale = 1 + Math.sin(Date.now() * 0.001) * 0.1;
                nexusCore.scale.set(scale, scale, scale);
            }
            renderer.render(scene, camera);
        }

        init3D();
    </script>
</body>
</html>

