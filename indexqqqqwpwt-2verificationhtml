    <style>
        body { margin: 0; overflow: hidden; background-color: #0d1117; color: #c9d1d9; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        #scene-container { position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1; }
        
        /* Contenitore Interfaccia di Comando (CIC) */
        #cic-interface { 
            position: absolute; bottom: 0; left: 50%; transform: translateX(-50%); 
            width: 90%; max-width: 600px; height: 350px; background: rgba(10, 20, 30, 0.9); 
            border: 1px solid #0072ff; border-radius: 8px 8px 0 0; 
            box-shadow: 0 0 25px rgba(0, 114, 255, 0.4); 
            z-index: 10; display: flex; flex-direction: column;
            opacity: 0; /* Inizialmente nascosto */
            transition: opacity 0.5s;
        }
        #cic-interface.active { opacity: 1; }

        /* Area dei log e risposte */
        #chat-log { flex-grow: 1; padding: 10px; overflow-y: auto; border-bottom: 1px solid #1a2b3e; }
        .log-entry { margin-bottom: 8px; font-size: 0.9em; }
        .log-user { color: #58a6ff; font-weight: bold; }
        .log-system { color: #00c6ff; }

        /* Area di input */
        #input-area { display: flex; padding: 10px; }
        #command-input { flex-grow: 1; padding: 10px; border: none; background: #1a2b3e; color: #c9d1d9; border-radius: 4px 0 0 4px; }
        #send-button { padding: 10px 15px; background: #0072ff; color: white; border: none; border-radius: 0 4px 4px 0; cursor: pointer; transition: background 0.2s; }
        #send-button:hover { background: #0056b3; }
        
        /* Pulsante di Avvio */
        #launch-button {
            position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
            padding: 15px 40px; border: none; border-radius: 50px;
            font-size: 1.2em; font-weight: bold; cursor: pointer;
            background: linear-gradient(45deg, #00c6ff, #0072ff);
            color: white; box-shadow: 0 8px 25px rgba(0, 114, 255, 0.5);
